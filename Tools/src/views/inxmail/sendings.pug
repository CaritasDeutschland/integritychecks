html
    head
        title= title
    body
        include includes/head.pug
        h2= title
        div
            ul
                li
                    a(class='button' href=prevLink) Prev
                li
                    a(class='button' href=nextLink) Next
        if !hasContent
            div
                | No sendings found
        else
            div
                div
                    table(width='100%', border=1)
                        tbody
                            each item in results
                                tr
                                    td= item.sendDate
                                    td= item.email
                                    td= item.mailingName
                                    td= item._links.self.href
